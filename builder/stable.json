{
    "appId": "com.amrpc",
    "productName": "AMRPC",
    "artifactName": "AMRPC.${ext}",
    "copyright": "Copyright Â© 2021 N0chteil Productions",
    "asar": "true",
    "asarUnpack": [
        "node_modules/itunes-bridge/wscript",
        "node_modules/itunes-bridge/jxa",
        "covers.json",
        "language/"
    ],
    "extraResources": [
        "assets/logo.png",
        "assets/tray/"
    ],
    "directories": {
        "buildResources": "assets",
        "output": "app/stable/win"
    },
    "files": [
        "node_modules/",
        "language/",
        "assets/",
        "*.js",
        "*.html",
        "*.css",
        "covers.json",
        "!node_modules/.cache/"
    ],
    "nsis": {
        "createDesktopShortcut": "always"
    },
    "win": {
        "target": "nsis",
        "icon": "assets/icons/win/icon.ico",
        "artifactName": "AMRPC-Installer.exe",
        "publish": ["github"]
    }
}